<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <!-- 标题栏 - 添加顶部内边距 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingTop="?attr/actionBarSize"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearby_info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- 分类选择区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/category_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Food 选项 -->
            <TextView
                android:id="@+id/category_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category_food"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:gravity="center"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground" />

            <!-- 竖线分隔符 -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0" />

            <!-- Transport 选项 -->
            <TextView
                android:id="@+id/category_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category_transport"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:gravity="center"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground" />

            <!-- 竖线分隔符 -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0" />

            <!-- Entertainment 选项 -->
            <TextView
                android:id="@+id/category_entertainment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category_entertainment"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:gravity="center"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

    <!-- 周边地点列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/poi_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp" />

</LinearLayout>